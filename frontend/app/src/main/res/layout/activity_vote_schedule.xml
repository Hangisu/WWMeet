<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="원하는 약속 일정의 \n 날짜와 시간을 선택해주세요"
                android:textStyle="bold"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/vote_schedule_datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:headerBackground="#000000"/>

            <LinearLayout
                android:id="@+id/datetext_and_logo_space"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vote_schedule_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginLeft="150dp"
                    android:text="날짜 나오는 곳"
                    android:textStyle="bold"
                    android:textSize="19sp" />

                <ImageButton
                    android:id="@+id/vote_schedule_add_btn"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:padding="4sp"
                    android:layout_marginLeft="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_box1">

                <LinearLayout
                    android:id="@+id/text_space"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작  시간"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp" />

                    <TimePicker
                        android:id="@+id/vote_schedule_start_timepicker"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:timePickerMode="spinner" />

                </LinearLayout>

                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line2"/>

                    <LinearLayout
                    android:id="@+id/Timepicker_space"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="종료  시간"
                        android:textSize="16sp" />

                    <TimePicker
                        android:id="@+id/vote_schedule_end_timepicker"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:timePickerMode="spinner" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vote_schedule_main_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            
            <Button
                android:id="@+id/vote_schedule_create_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_design"
                android:backgroundTint="@color/black"
                android:textColor="#ffffff"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:text="확인" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>